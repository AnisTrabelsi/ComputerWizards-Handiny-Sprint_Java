<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Column labels -->
    <Label text="Brand" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <Label text="Model" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label text="Year" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
    <Label text="Price" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

    <!-- Car data -->
    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
            <image>
              
            </image>
        </ImageView>
        <Label text="Toyota" styleClass="brand"/>
        <Label text="Camry" styleClass="model"/>
        <Label text="2018" styleClass="year"/>
        <Label text="$22,000" styleClass="price"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
        <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
            <image>
                
            </image>
        </ImageView>
        <Label text="Ford" styleClass="brand"/>
        <Label text="Mustang" styleClass="model"/>
        <Label text="2020" styleClass="year"/>
        <Label text="$30,000" styleClass="price"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <ImageView fitWidth="100" fitHeight="100" preserveRatio="true">
            <image>
               
            </image>
        </ImageView>
        <Label text="Ford" styleClass="brand"/>
        <Label text="F-150" styleClass="model"/>
        <Label text="2019" styleClass="year"/>
        <Label text="$25,000" styleClass="price"/>
    </HBox>

