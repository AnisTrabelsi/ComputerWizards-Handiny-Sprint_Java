<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" stylesheets="styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.ChatBotFXMLController">
   <Label text="Chatbot Handiny" />
   <ScrollPane fx:id="chatScrollPane">
      <VBox fx:id="chatBox" />
   </ScrollPane>
   <HBox alignment="CENTER">
      <ComboBox fx:id="questionComboBox" onAction="#handleQuestionSelection" prefHeight="26.0" prefWidth="211.0" promptText="Séléctionner un question" />
      <ImageView fitHeight="21.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/icons8-envoi-de-courriel-24.png" />
         </image>
      </ImageView>
   </HBox>
</VBox>
